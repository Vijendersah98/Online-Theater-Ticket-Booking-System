</div>
<button type ="submit" name="calculate">Calculate></button>
<button type = "reset">Clear</button>
</form>
<?php
if(isset($_POST['calculate'])) {
$seatPrice = $_POST['seat'];
$paymentMode = $_POST['Payment'];
$totalSeats = $_POST['seats'];
$totalAmount = $seatPrice * $totalSeats;
if($paymentMode == cash){
$discount = $totalAmount * 0.10;
}
else{
$discount = $totalAmount * 0.05;
}
$netAmount = $totalAmount - $discount;
echo "<div class = 'output'>";
echo "<p>"<strong> Total Amount:</strong> Rs. " 
.number_format($totalAmount, 2) . "<p>";
echo "<p>"<strong> Discount:</strong> Rs. " 
.number_format($discount, 2) . "<p>";
echo "<p>"<strong> Net Amount:</strong> Rs. " 
.number_format($netAmount, 2) . "<p>";
    echo "</div>";    
}
?>
</div>
